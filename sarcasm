import random
import tkinter as tk

#Scripting

def sarcasm(text):
    text = text.lower()
    length = len(text)
    capital = []
    for i in range(len(text)):
        capital.append(random.randint(1, length - 1))

    for num in capital:
        text = text[:num] + text[num].upper() + text[num + 1:]

    return text

def on_click():
    input_text = text_box.get()
    output = sarcasm(input_text)
    answer.delete(1.0, tk.END)  # Clear the text widget
    answer.insert(tk.END, output)

#GUI

window = tk.Tk()
window.title("Sarcasm Generator")
window.geometry("500x400")

title_label = tk.Label(window, text="Sarcasm Generator", font=("ComicSans",36))
title_label.pack(padx=10,pady=10)

#Create a container that will hold the entry widget and button
container = tk.Frame(window)
container.pack(padx=20, pady=20, fill="both")

#Add entry widget
text_box = tk.Entry(container)
text_box.config(width=50)
text_box.pack(pady=20,side="left", fill="x")

#Create a "generate" button
generate_button = tk.Button(container, text="Generate Sarcasm", command=on_click)
generate_button.pack(side="right",padx=10)  # Add padding to separate it from the entry

answer = tk.Text(window, width=50, height=10, font=("Helvetica"))
answer.pack(padx=20, pady=30)



window.mainloop()
